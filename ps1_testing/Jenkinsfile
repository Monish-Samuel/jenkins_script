def props
def major
def minor
def patch
def buildNo

pipeline{
    agent any 
    stages{
        stage('Source_Code_Checkout'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Monish-Samuel/powershell_testing.git']]])
            }
        }
        stage('Build Number Check'){
		steps{	
			script{
			props = readProperties file: 'build.properties'
			major= props['MAJOR_VERSION']
			minor= props['MINOR_VERSION']
			patch= props['PATCH_VERSION']
			buildNo= major+"."+minor+"."+patch
			bat 'echo ${buildNo}'
		}
		}	
	}    
    }
}
